<Page
    x:Class="Neptunium.View.XboxShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Neptunium.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conv="using:Crystal3.UI.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <conv:NullToVisibilityConverter x:Key="NullToVisConv" />
            <conv:InverseNullToVisibilityConverter x:Key="InvNullToVisConv" />
            <conv:BooleanToVisibilityConverter x:Key="BoolToVisConv" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Pivot Title="Neptunium" x:Name="mainPivot" Grid.Row="0" SelectionChanged="mainPivot_SelectionChanged">
            <PivotItem Header="Stations" />
            <PivotItem Header="Song History" />
            <PivotItem Header="Settings" />
        </Pivot>

        <Frame Grid.Row="1" x:Name="xboxMainFrame" />

        <RelativePanel HorizontalAlignment="Stretch" Grid.Row="2" x:Name="FakeAppBar" Background="{ThemeResource SystemListAccentMediumColor}" Height="64.5"
                       DataContext="{Binding NowPlayingView, UpdateSourceTrigger=PropertyChanged}">

            <RelativePanel x:Name="NowPlayingPanel" RelativePanel.AlignLeftWithPanel="True" 
                           Visibility="{Binding CurrentStationLogo, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullToVisConv}}" Margin="0 10">
                <Image Height="50" Width="50" Margin="7 0" RelativePanel.AlignLeftWithPanel="True" x:Name="stationCoverArt" Source="{Binding CurrentStationLogo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock x:Name="nowPlayingTrackBox" RelativePanel.RightOf="stationCoverArt" RelativePanel.AlignHorizontalCenterWithPanel="True" Height="20" 
                                           Text="{Binding CurrentSong, UpdateSourceTrigger=PropertyChanged}" FontSize="16" Margin="10 0 0 0" />
                <TextBlock x:Name="nowPlayingArtistBox" RelativePanel.RightOf="stationCoverArt" RelativePanel.AlignHorizontalCenterWithPanel="True" Height="20"
                                        RelativePanel.Below="nowPlayingTrackBox" Text="{Binding CurrentArtist, UpdateSourceTrigger=PropertyChanged}" FontSize="15" Margin="10 0 0 0" />
            </RelativePanel>

            <StackPanel x:Name="FakeAppBarCommandPanel" Orientation="Horizontal" RelativePanel.AlignRightWithPanel="True" Width="Auto" Margin="0 10">
                <StackPanel.Resources>
                    <Style TargetType="AppBarButton">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Width" Value="50" />
                        <Setter Property="Height" Value="50" />
                    </Style>
                </StackPanel.Resources>
                <AppBarButton Icon="Play" Content="Play" x:Name="PlayPauseButton" Command="{Binding PlayCommand}" />
            </StackPanel>
        </RelativePanel>
    </Grid>
</Page>
