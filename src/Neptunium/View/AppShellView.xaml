<Page
    x:Class="Neptunium.View.AppShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Neptunium.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wst="using:WindowsStateTriggers"
    xmlns:conv="using:Crystal3.UI.Converters"
    x:Name="LayoutRoot"
    mc:Ignorable="d">
    
    <Page.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisConv" />
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup CurrentStateChanged="VisualStateGroup_CurrentStateChanged">
                <VisualState x:Name="DesktopVisualState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="RootSplitView.DisplayMode" Value="Inline" />
                        <Setter Target="RootSplitView.IsPaneOpen" Value="True" />
                        <Setter Target="RootSplitView.OpenPaneLength" Value="200" />
                        <Setter Target="RootSplitView.CompactPaneLength" Value="48" />
                        <Setter Target="NowPlayingPanel.(RelativePanel.AlignLeftWithPanel)" Value="True" />
                        <Setter Target="FakeAppBarCommandPanel.(RelativePanel.AlignRightWithPanel)" Value="True" />
                        <Setter Target="nowPlayingTrackBox.FontSize" Value="18" />
                        <Setter Target="nowPlayingArtistBox.FontSize" Value="18" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="PhoneVisualState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootSplitView.DisplayMode" Value="Overlay" />
                        <Setter Target="RootSplitView.OpenPaneLength" Value="240" />
                        <Setter Target="NowPlayingAppBarButton.Width" Value="100" />
                        <Setter Target="NowPlayingAppBarButton.Margin" Value="20 0 0 0" />
                        <Setter Target="NowPlayingPanel.(RelativePanel.AlignTopWithPanel)" Value="True" />
                        <Setter Target="FakeAppBarCommandPanel.(RelativePanel.Below)" Value="NowPlayingPanel" />
                        <Setter Target="nowPlayingTrackBox.FontSize" Value="16" />
                        <Setter Target="nowPlayingArtistBox.FontSize" Value="16" />
                        <Setter Target="CurrentPaneTitle.FontSize" Value="20" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid Height="50" HorizontalAlignment="Stretch" x:Name="TopMenu"
                  Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="TogglePaneButton"
                      TabIndex="1"
                      Style="{StaticResource SplitViewTogglePaneButtonStyle}"
                      IsChecked="{Binding IsPaneOpen, ElementName=RootSplitView, Mode=TwoWay}"
                      AutomationProperties.Name="Menu"
                      ToolTipService.ToolTip="Menu" />
                
                <TextBlock x:Name="CurrentPaneTitle" Grid.Column="1" VerticalAlignment="Center"  />
            </Grid>
        </Grid>
        <SplitView x:Name="RootSplitView" Margin="0 0 0 0" Grid.Row="1">
            <SplitView.Pane>
                <StackPanel x:Name="RootSplitViewPaneStackPanel">
                    <!-- Static Relativepanel, substitutes nested stackpanel or grid with rows/columns for this simple scenario -->
                    <RadioButton GroupName="Navigation" Style="{StaticResource NavRadioButtonStyle}" Content="Stations" Tag=""
                                 Command="{Binding GoToStationsViewCommand}" IsChecked="True" x:Name="stationsNavButton" />
                    <RadioButton GroupName="Navigation" Style="{StaticResource NavRadioButtonStyle}" Content="Now Playing" Tag="" 
                                 Command="{Binding GoToNowPlayingViewCommand}" x:Name="nowPlayingNavButton" />
                    <!--<RadioButton GroupName="Navigation" Style="{StaticResource NavRadioButtonStyle}" Content="Favorites" Tag="" />-->
                </StackPanel>
            </SplitView.Pane>

            <SplitView.Content>
                <Frame x:Name="inlineFrame" />
            </SplitView.Content>
        </SplitView>

        <RelativePanel HorizontalAlignment="Stretch" Grid.Row="2" x:Name="FakeAppBar">

            <RelativePanel x:Name="NowPlayingPanel" RelativePanel.AlignLeftWithPanel="True" Visibility="{Binding CurrentStationLogo, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullToVisConv}}">
                <Image Height="50" Width="50" RelativePanel.AlignLeftWithPanel="True" x:Name="stationCoverArt" Source="{Binding CurrentStationLogo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock x:Name="nowPlayingTrackBox" RelativePanel.RightOf="stationCoverArt" RelativePanel.AlignHorizontalCenterWithPanel="True" Height="20" 
                                           Text="{Binding CurrentSong, UpdateSourceTrigger=PropertyChanged}" FontSize="18" FontWeight="Bold" Margin="20 0 0 0" />
                <TextBlock x:Name="nowPlayingArtistBox" RelativePanel.RightOf="stationCoverArt" RelativePanel.AlignHorizontalCenterWithPanel="True" Height="20"
                                        RelativePanel.Below="nowPlayingTrackBox" Text="{Binding CurrentArtist, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="20 0 0 0" />
            </RelativePanel>

            <StackPanel x:Name="FakeAppBarCommandPanel" Orientation="Horizontal" RelativePanel.AlignRightWithPanel="True">
                <StackPanel.Resources>
                    <Style TargetType="AppBarButton">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Width" Value="50" />
                        <Setter Property="Height" Value="50" />
                    </Style>
                </StackPanel.Resources>
                <AppBarButton Icon="Play" Content="Play" x:Name="PlayPauseButton" Command="{Binding PlayCommand}" />
                <AppBarButton Icon="Like" Content="Favorite" />
            </StackPanel>
        </RelativePanel>
    </Grid>
</Page>
